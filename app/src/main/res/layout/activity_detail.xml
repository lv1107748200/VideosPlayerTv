<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_margin="20dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:id="@+id/image_poster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/hehe"
                    android:scaleType="fitXY"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <Button
                    android:id="@+id/btn_player"
                    android:text="播放"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <Button
                    android:id="@+id/btn_collect"
                    android:text="收藏"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        </LinearLayout>




        <LinearLayout
            android:id="@+id/com_layout"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/titlestrip_background_color"
            android:orientation="vertical"
            app:behavior_hideable="false"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/titlestrip_background_color"
                >
                <com.hr.videosplayertv.widget.tablayout.TvTabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/actionbar_color"
                    app:tabIndicatorResId="@color/green_bright"
                    app:tabIndicatorGravity="bottom"
                    app:tabIndicatorHeight="4px"
                    app:tabGravity="center"
                    app:tabTexSize="14sp"
                    app:tabTextColor="@drawable/selector_tab_font_color"
                    app:tabScrollMode="fixed"/>

            </LinearLayout>
            <com.owen.tvrecyclerview.widget.TvRecyclerView
                android:layout_gravity="center"
                android:id="@+id/select_collect"
                android:background="#DDDD22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20px"
                app:tv_selectedItemIsCentered="true"
                android:orientation="vertical"
                app:tv_isMenu="true"
                app:spanCount="10"
                app:tv_layoutManager="V7GridLayoutManager"/>

            <com.owen.tvrecyclerview.widget.TvRecyclerView
                android:id="@+id/tv_list"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                style="@style/oneWayView"
                android:orientation="vertical"
                app:tv_layoutManager="V7LinearLayoutManager"/>

        </LinearLayout>



    </android.support.design.widget.CoordinatorLayout>


</FrameLayout>