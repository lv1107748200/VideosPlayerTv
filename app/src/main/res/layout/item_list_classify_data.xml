<?xml version="1.0" encoding="utf-8"?>
<com.hr.videosplayertv.widget.layout.RoundFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rfl_radius="@dimen/rfl_radius"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/foc_back_seven"
    android:padding="@dimen/x4"
    >
    <ImageView
        android:id="@+id/image"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />
    <FrameLayout
        android:id="@+id/classly_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>

    <TextView
        android:duplicateParentState="true"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@drawable/foc_tv_two"
        android:gravity="center"
       style="@style/BaseTextStyleTwo"
        />

</com.hr.videosplayertv.widget.layout.RoundFrameLayout>